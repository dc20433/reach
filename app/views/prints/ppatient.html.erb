<% if (current_user && current_user.Manager?) || (current_user && current_user.Admin?) %>
  
  <h2 class="text-center">Patient Information as of <%= (Time.zone.now() - 5*3600).strftime("%Y-%m-%d %H:%M") %></h2>

  <button onclick="window.print()", class="btn btn-sm btn-outline-success ps-3 pe-3 rounded-pill" >Print This Page</button>
  <%= link_to 'Back to Patients', regis_path, class:"btn btn-sm btn-outline-secondary m-1 rounded-pill" %>

  <table class="table table-sm table-striped table-hover mt-1">
    <thead class="table-success">
    <tr style="height:13px">
        <th>Name</th>
        <th style="width:115px">Date</th>
        <th>Contact Info</th>
        <th>Weight</th>
        <th>Complaints</th>
        <th>Onset/Pain</th>
        <th>PCP</th>
        <th>Health History</th>
        <th style="width:115px">Meds Taken</th>
      </tr>
    </thead>
    </tbody>
      <% @n = 0 %>
      <% Patient.joins(:regi).order("last_name ASC, v_date DESC").each do |patient| %>
        <tr style="height:15px">
        <% @n != patient.regi_id ? show_name = Regi.where(id: patient.regi_id).pluck(:last_name).to_sentence + ", " + Regi.where(id: patient.regi_id).pluck(:first_name).to_sentence + " " + Regi.where(id: patient.regi_id).pluck(:init).to_sentence : show_name = " " %>
          <td><%= show_name %></td>
            <% @n=patient.regi_id %>
          <td><%= patient.v_date %></td>
          <td>
            <%= patient.street %><%= ', ' if patient.street? %>
            <%= patient.city %>
            <%= patient.state %>
            <%= patient.zip %>
            <%= 'C:' if patient.cell? %><%= patient.cell %>
            <%= 'H:' if patient.home? %><%= patient.home %>
            <%= 'W:' if patient.work? %><%= patient.work %>
            <%= 'E:' if patient.email? %><%= patient.email %>
          </td>
          <td><%= patient.weight %></td>
          <td>
            <%= '1.' if patient.com1? %>
            <%= patient.com1 %><%= ', 2.' if patient.com2? %>
            <%= patient.com2 %><%= ', 3.' if patient.com3? %>
            <%= patient.com3 %>
          </td>
          <td>
            <%= patient.d_onset %><%= '/Pain: ' if patient.pain_scale? %>
            <%= patient.pain_scale %>
          </td>
          <td><%= patient.pcp_name %></td>
          <td>
            <%= patient.di_list.to_sentence %><%= ', ' if patient.o_dis? %>
            <%= patient.o_dis %><%= ', ' if patient.inj_surg? %>
            <%= patient.inj_surg %><%= ', Preg' if patient.preg == 'Yes' %>
          </td>
          <td><%= patient.med_taken %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>